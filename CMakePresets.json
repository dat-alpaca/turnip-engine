{
  "version": 8,
  "configurePresets": [
    {
      "name": "turnip",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "TUR_BUILD_SANDBOX": "ON",
        "TUR_BUILD_ENGINE": "ON",
        "TUR_USE_GLFW": "ON",
        "TUR_USE_VULKAN": "ON",
        "TUR_USE_OPENGL": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "turnip-build",
      "displayName": "Turnip Build",
      "description": "Build Turnip",
      "configurePreset": "turnip",
      "jobs": 6
    }
  ]
}
