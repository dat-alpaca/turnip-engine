{
    "version": 8,
    "configurePresets": [
        {
            "name": "turnip",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "GCC_INSTALL_PREFIX": ""
            }
        }
    ],
    "buildPresets": [
        {
            "name": "turnip-build",
            "displayName": "Turnip Build",
            "description": "Build Turnip",
            "configurePreset": "turnip",
            "jobs": 12
        }
    ]
}